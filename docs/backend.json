
{
  "entities": {
    "Company": {
      "title": "Company",
      "type": "object",
      "description": "Représente une entreprise cliente dans BusinessPilot.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "subscriptionStatus": { "type": "string" },
        "subscription": {
          "type": "object",
          "properties": {
            "pricePerUser": { "type": "number" },
            "activeUsersCount": { "type": "number" },
            "totalMonthlyAmount": { "type": "number" },
            "currency": { "type": "string" },
            "status": { "type": "string", "enum": ["active", "overdue"] },
            "nextBillingDate": { "type": "string", "format": "date-time" }
          }
        }
      },
      "required": ["id", "name", "subscriptionStatus"]
    },
    "User": {
      "title": "User",
      "type": "object",
      "description": "Utilisateur lié à une entreprise.",
      "properties": {
        "uid": { "type": "string" },
        "companyId": { "type": "string" },
        "role": { "type": "string", "enum": ["admin", "patron", "family", "employee"] },
        "name": { "type": "string" }
      },
      "required": ["uid", "companyId", "role"]
    },
    "Invoice": {
      "title": "Invoice",
      "type": "object",
      "description": "Facture mensuelle générée pour le Patron.",
      "properties": {
        "userId": { "type": "string" },
        "companyId": { "type": "string" },
        "amount": { "type": "number" },
        "date": { "type": "string", "format": "date-time" },
        "monthId": { "type": "string" },
        "label": { "type": "string" },
        "status": { "type": "string" }
      },
      "required": ["userId", "amount", "date", "monthId"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/companies/{companyId}": {
      "schema": { "$ref": "#/backend/entities/Company" },
      "description": "Profils d'entreprises et abonnements."
    },
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/User" },
      "description": "Comptes utilisateurs."
    }
  }
}
