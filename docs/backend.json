
{
  "entities": {
    "Company": {
      "title": "Company",
      "type": "object",
      "description": "Represents a company (client) in the BusinessPilot SaaS application.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "subscriptionStatus": { "type": "string" }
      },
      "required": ["id", "name", "subscriptionStatus"]
    },
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user linked to Firebase Authentication.",
      "properties": {
        "uid": { "type": "string" },
        "companyId": { "type": "string" },
        "role": { "type": "string" },
        "name": { "type": "string" }
      },
      "required": ["uid", "companyId", "role"]
    },
    "Invoice": {
      "title": "Invoice",
      "type": "object",
      "description": "Represents a monthly invoice generated for an Espace user.",
      "properties": {
        "userId": { "type": "string" },
        "companyId": { "type": "string" },
        "amount": { "type": "number" },
        "date": { "type": "string", "format": "date-time" },
        "monthId": { "type": "string", "description": "Format YYYY-M" },
        "label": { "type": "string" },
        "status": { "type": "string" }
      },
      "required": ["userId", "amount", "date", "monthId"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/companies/{companyId}": {
      "schema": { "$ref": "#/backend/entities/Company" },
      "description": "Company profiles."
    },
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/User" },
      "description": "User accounts."
    },
    "/users/{userId}/invoices/{invoiceId}": {
      "schema": { "$ref": "#/backend/entities/Invoice" },
      "description": "Monthly invoices for a user."
    },
    "/users/{adminId}/received_invoices/{invoiceId}": {
      "schema": { "$ref": "#/backend/entities/Invoice" },
      "description": "Copies of all generated invoices received by the Admin."
    }
  }
}
