
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Gestion des profils utilisateurs
    match /users/{userId} {
      allow read, write: if isSignedIn(); 
      
      // Factures reçues par l'admin (pour usage futur si réactivé)
      match /received_invoices/{invoiceId} {
        allow read: if isSignedIn() && request.auth.uid == userId;
        allow write: if isSignedIn();
      }
    }

    // Gestion des entreprises
    match /companies/{companyId} {
      // Accès global authentifié pour l'Espace de travail
      allow read, write: if isSignedIn();

      // Autoriser récursivement toutes les sous-collections (catégories, documents, événements)
      match /{allSubcollections=**} {
        allow read, write: if isSignedIn();
      }
    }

    // Autoriser la lecture des modules pour tous
    match /modules/{moduleId} {
      allow read: if true;
    }
  }
}
