
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Gestion des profils utilisateurs
    match /users/{userId} {
      // Lecture autorisée pour l'auth, mais écriture restreinte au propriétaire
      allow read: if isSignedIn();
      allow write: if isOwner(userId); 
      
      match /received_invoices/{invoiceId} {
        allow read: if isOwner(userId);
        allow write: if isSignedIn();
      }
    }

    // Gestion des entreprises
    match /companies/{companyId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn(); // Idéalement vérifier l'appartenance à la compagnie

      match /{allSubcollections=**} {
        allow read, write: if isSignedIn();
      }
    }

    // Autoriser la lecture des modules
    match /modules/{moduleId} {
      allow read: if true;
    }
  }
}
