
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * BUSINESS PILOT SECURITY RULES - MULTI-ENTREPRISE STRICTE
     * 
     * Rôles:
     * - super_admin (JSecchi): Accès total aux collections.
     * - admin (Patron): Gère SA société exclusivement (Paul ou Oreal).
     * - employee: Accès restreint à SA société exclusivement.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isSuperAdmin() {
      return isSignedIn() && getUserData().role == 'super_admin';
    }

    function belongsToCompany(companyId) {
      return isSignedIn() && (getUserData().companyId == companyId || isSuperAdmin());
    }

    // Un utilisateur ne peut lire que son propre profil (ou le Super Admin)
    match /users/{userId} {
      allow get: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
      allow list: if isSuperAdmin() || (isSignedIn() && request.query.limit <= 100); 
      allow create: if true; 
      allow update: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
      allow delete: if isSuperAdmin();
    }

    // Isolation stricte par entreprise (companyId)
    match /companies/{companyId} {
      allow read: if belongsToCompany(companyId);
      allow write: if isSuperAdmin() || (belongsToCompany(companyId) && getUserData().role == 'admin');
    }

    match /companies/{companyId}/categories/{categoryId} {
      allow read: if belongsToCompany(companyId);
      allow write: if isSuperAdmin() || (belongsToCompany(companyId) && getUserData().role == 'admin');
    }

    match /companies/{companyId}/documents/{documentId} {
      allow read: if belongsToCompany(companyId);
      allow write: if isSuperAdmin() || (belongsToCompany(companyId) && getUserData().role == 'admin');
    }

    match /companies/{companyId}/events/{eventId} {
      // Un Super Admin ne synchronise pas son propre calendrier avec les entreprises
      allow read: if belongsToCompany(companyId);
      allow write: if belongsToCompany(companyId) && !isSuperAdmin();
    }
  }
}
