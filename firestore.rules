
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function belongsToUser() {
      return isSignedIn() && request.auth.uid == resource.data.userId;
    }

    // Gestion des profils utilisateurs
    match /users/{userId} {
      // Autoriser la lecture publique pour permettre la recherche par identifiant lors du login
      allow read: if true; 
      allow write: if isOwner(userId); 
      
      match /received_invoices/{invoiceId} {
        allow read: if isOwner(userId);
        allow write: if isSignedIn();
      }
    }

    // Gestion des entreprises et de leurs sous-collections
    match /companies/{companyId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();

      match /events/{eventId} {
        allow read: if isSignedIn();
        // Validation par userId pour l'appartenance de l'événement ou Admin
        allow write: if isSignedIn() && (
          request.resource.data.userId == request.auth.uid || 
          resource.data.userId == request.auth.uid ||
          request.auth.uid == 'jsecchi'
        );
      }

      match /documents/{docId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn();
      }

      match /categories/{catId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn();
      }

      match /{allSubcollections=**} {
        allow read, write: if isSignedIn();
      }
    }

    // Autoriser la lecture des modules (statique)
    match /modules/{moduleId} {
      allow read: if true;
    }
  }
}
