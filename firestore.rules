rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Gestion des profils utilisateurs
    // On autorise la lecture et l'écriture pour permettre l'inscription et l'identification simplifiée dans le prototype
    match /users/{userId} {
      allow read, write: if true; 
    }

    // Gestion des entreprises et de leurs sous-collections
    match /companies/{companyId} {
      // Un utilisateur peut lire/écrire s'il est connecté (l'isolation est gérée par les requêtes filtrées dans l'app)
      allow read, write: if isSignedIn();

      match /{allSubcollections=**} {
        allow read, write: if isSignedIn();
      }
    }

    // Autoriser la lecture des modules pour tous
    match /modules/{moduleId} {
      allow read: if true;
    }

    // Sécurité pour les propriétaires de l'application
    match /applicationOwners/{ownerId} {
      allow read, write: if isSignedIn();
    }
  }
}