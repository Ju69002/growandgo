rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Récupère le profil de l'utilisateur pour vérifier son appartenance
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Vérifie si l'utilisateur appartient à l'entreprise demandée
    function belongsToCompany(companyId) {
      return isSignedIn() && getUserData().companyId == companyId;
    }

    // Gestion des profils utilisateurs
    match /users/{userId} {
      // Un utilisateur peut lire son propre profil ou un Super Admin peut tout lire
      allow read: if isSignedIn() && (request.auth.uid == userId || getUserData().role == 'super_admin');
      // La création est autorisée pour l'inscription, la mise à jour pour le Super Admin ou l'utilisateur lui-même
      allow write: if true; 
    }

    // Gestion des entreprises (Isolation forte)
    match /companies/{companyId} {
      allow read: if belongsToCompany(companyId) || (isSignedIn() && getUserData().role == 'super_admin');
      allow write: if belongsToCompany(companyId) || (isSignedIn() && getUserData().role == 'super_admin');

      match /categories/{categoryId} {
        allow read, write: if belongsToCompany(companyId) || (isSignedIn() && getUserData().role == 'super_admin');
      }
      match /documents/{documentId} {
        allow read, write: if belongsToCompany(companyId) || (isSignedIn() && getUserData().role == 'super_admin');
      }
      match /events/{eventId} {
        allow read, write: if belongsToCompany(companyId) || (isSignedIn() && getUserData().role == 'super_admin');
      }
    }

    // Autoriser la lecture des modules pour la configuration
    match /modules/{moduleId} {
      allow read: if isSignedIn();
    }

    // Sécurité pour les propriétaires de l'application (Super Admin)
    match /applicationOwners/{ownerId} {
      allow read, write: if isSignedIn() && getUserData().role == 'super_admin';
    }
  }
}