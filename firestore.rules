rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * BUSINESS PILOT SECURITY RULES
     *
     * CORE PHILOSOPHY:
     * This ruleset implements a multi-tenant SaaS security model where data access is strictly 
     * partitioned by 'companyId'. The architecture relies on the 'User' document to define 
     * a user's membership and role within a specific company.
     */

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData() {
      let path = /databases/$(database)/documents/users/$(request.auth.uid);
      return exists(path) ? get(path).data : null;
    }

    function belongsToCompany(companyId) {
      let data = getUserData();
      return isSignedIn() && data != null && data.companyId == companyId;
    }

    function isCompanyAdmin() {
      let data = getUserData();
      return isSignedIn() && data != null && data.role in ['admin', 'super_admin'];
    }

    function isGlobalAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // --- COLLECTION RULES ---

    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow list, create, update, delete: if isGlobalAdmin();
    }

    match /users/{userId} {
      allow get: if isSignedIn() && (isOwner(userId) || (resource != null && belongsToCompany(resource.data.companyId)));
      allow list: if isSignedIn() && isCompanyAdmin();
      allow create: if isOwner(userId);
      allow update: if (isOwner(userId) && request.resource.data.role == resource.data.role) || (isCompanyAdmin() && belongsToCompany(resource.data.companyId));
      allow delete: if isGlobalAdmin();
    }

    match /companies/{companyId} {
      allow get: if belongsToCompany(companyId);
      allow list: if isGlobalAdmin();
      allow create: if isSignedIn(); // Allow creation for prototyping/onboarding
      allow update: if (belongsToCompany(companyId) && isCompanyAdmin()) || isGlobalAdmin();
      allow delete: if isGlobalAdmin();
    }

    match /companies/{companyId}/categories/{categoryId} {
      allow get: if belongsToCompany(companyId) && (isCompanyAdmin() || (resource != null && resource.data.visibleToEmployees == true));
      allow list: if belongsToCompany(companyId);
      allow create, update, delete: if belongsToCompany(companyId) && isCompanyAdmin();
    }

    match /companies/{companyId}/documents/{documentId} {
      allow get, list: if belongsToCompany(companyId);
      allow create, update: if belongsToCompany(companyId);
      allow delete: if belongsToCompany(companyId) && isCompanyAdmin();
    }
  }
}