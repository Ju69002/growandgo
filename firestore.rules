rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Gestion des profils utilisateurs
    match /users/{userId} {
      // Autoriser la lecture et la recherche pour le répertoire de test et la connexion
      allow read, list: if true;
      // Un utilisateur peut modifier son propre profil ou le créer s'il est connecté
      allow write: if isSignedIn();
    }

    // Gestion des entreprises et de leurs sous-collections
    match /companies/{companyId} {
      // Autoriser la lecture et la création pour l'initialisation des studios
      allow read, create: if true;
      // Autoriser les mises à jour pour les membres connectés
      allow update: if isSignedIn();

      // Autoriser l'accès complet aux dossiers, documents et événements pour les utilisateurs connectés
      match /categories/{categoryId} {
        allow read, write: if isSignedIn();
      }
      match /documents/{documentId} {
        allow read, write: if isSignedIn();
      }
      match /events/{eventId} {
        allow read, write: if isSignedIn();
      }
    }

    // Autoriser la lecture des modules pour la configuration
    match /modules/{moduleId} {
      allow read: if true;
    }

    // Sécurité stricte pour les propriétaires de l'application (Super Admin technique)
    match /applicationOwners/{ownerId} {
      allow read: if isSignedIn();
    }
  }
}