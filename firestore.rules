rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    /**
     * BUSINESS PILOT SECURITY RULES - PROTOTYPE MODE
     * Autorise toutes les lectures et écritures pour les utilisateurs connectés
     * pour permettre à l'IA Architecte d'agir sans contraintes techniques.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}