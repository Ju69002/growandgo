
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Gestion des profils utilisateurs
    match /users/{userId} {
      // Lecture publique autorisée pour le répertoire d'aide à la connexion (MVP)
      allow read: if true; 
      allow write: if isSignedIn(); 
      
      // Factures reçues par l'admin
      match /received_invoices/{invoiceId} {
        allow read: if isSignedIn() && request.auth.uid == userId;
        allow write: if isSignedIn();
      }
    }

    // Gestion des entreprises (Accès pour tous les membres de l'espace)
    match /companies/{companyId} {
      allow read, write: if isSignedIn();

      // Accès récursif aux sous-collections (documents, événements, catégories)
      match /{allSubcollections=**} {
        allow read, write: if isSignedIn();
      }
    }

    // Autoriser la lecture des modules pour tous
    match /modules/{moduleId} {
      allow read: if true;
    }
  }
}
