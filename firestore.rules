
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * BUSINESS PILOT SECURITY RULES - MULTI-ENTREPRISE
     * 
     * Rôles:
     * - super_admin (JSecchi): Accès total, mais pas de synchro calendrier sur les entreprises.
     * - admin (Patron): Gère SA société exclusivement.
     * - employee: Lecture/Action sur les dossiers autorisés de SA société.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isSuperAdmin() {
      return isSignedIn() && getUserData().role == 'super_admin';
    }

    function belongsToCompany(companyId) {
      return isSignedIn() && (getUserData().companyId == companyId || isSuperAdmin());
    }

    match /users/{userId} {
      allow get: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
      allow list: if isSuperAdmin() || (isSignedIn() && request.query.limit <= 100); 
      allow create: if true; // Pour l'inscription
      allow update: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
      allow delete: if isSuperAdmin();
    }

    match /companies/{companyId} {
      allow read: if belongsToCompany(companyId);
      allow write: if isSuperAdmin() || (belongsToCompany(companyId) && getUserData().role == 'admin');
    }

    match /companies/{companyId}/categories/{categoryId} {
      allow read: if belongsToCompany(companyId);
      allow write: if isSuperAdmin() || (belongsToCompany(companyId) && getUserData().role == 'admin');
    }

    match /companies/{companyId}/documents/{documentId} {
      allow read: if belongsToCompany(companyId);
      allow write: if isSuperAdmin() || (belongsToCompany(companyId) && getUserData().role == 'admin');
    }

    match /companies/{companyId}/events/{eventId} {
      // Un Super Admin ne peut pas synchroniser ses propres calendriers avec des entreprises tierces
      allow read: if belongsToCompany(companyId);
      allow write: if belongsToCompany(companyId);
    }
  }
}
