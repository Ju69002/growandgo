
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Gestion simplifiée des profils
    match /users/{userId} {
      // Un utilisateur peut TOUJOURS lire son propre profil sans condition complexe
      allow get: if isSignedIn() && request.auth.uid == userId;
      // Autoriser les super admins à lire tous les profils
      allow get: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
      
      allow list: if isSignedIn();
      allow create: if true; 
      allow update: if isSignedIn() && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin');
      allow delete: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
    }

    function belongsToCompany(companyId) {
      return isSignedIn() && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin');
    }

    match /companies/{companyId} {
      allow read: if belongsToCompany(companyId);
      allow write: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
    }

    match /companies/{companyId}/categories/{categoryId} {
      allow read: if belongsToCompany(companyId);
      allow write: if belongsToCompany(companyId) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /companies/{companyId}/documents/{documentId} {
      allow read: if belongsToCompany(companyId);
      allow write: if belongsToCompany(companyId) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /companies/{companyId}/events/{eventId} {
      allow read: if belongsToCompany(companyId);
      allow write: if belongsToCompany(companyId);
    }
  }
}
