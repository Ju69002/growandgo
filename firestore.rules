
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isSignedIn() && (
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin'
      );
    }

    // Gestion des profils utilisateurs
    match /users/{userId} {
      allow read, write: if true; 
      
      // Factures privées de l'utilisateur
      match /invoices/{invoiceId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
      
      // Factures reçues par l'admin
      match /received_invoices/{invoiceId} {
        allow read: if isSignedIn() && request.auth.uid == userId;
        allow write: if isSignedIn(); // Permet aux utilisateurs d'envoyer une copie à l'admin
      }
    }

    // Gestion des entreprises
    match /companies/{companyId} {
      // Seul l'Admin peut modifier le répertoire (nom d'entreprise)
      allow read, write: if isSignedIn();

      match /categories/{categoryId} {
        allow read, write: if isSignedIn();
      }

      // Seul l'utilisateur de l'entreprise peut voir ses propres documents
      match /documents/{documentId} {
        allow read, write: if isSignedIn();
      }
    }

    // Autoriser la lecture des modules pour tous
    match /modules/{moduleId} {
      allow read: if true;
    }
  }
}
