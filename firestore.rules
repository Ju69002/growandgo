
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Gestion des profils utilisateurs
    match /users/{userId} {
      // Lecture autorisée pour l'auth, mais écriture restreinte au propriétaire exact
      allow read: if isSignedIn();
      allow write: if isOwner(userId); 
      
      match /received_invoices/{invoiceId} {
        allow read: if isOwner(userId);
        allow write: if isSignedIn();
      }
    }

    // Gestion des entreprises et de leurs sous-collections
    match /companies/{companyId} {
      allow read: if isSignedIn();
      // On autorise l'écriture si l'utilisateur est authentifié. 
      allow write: if isSignedIn();

      match /events/{eventId} {
        allow read: if isSignedIn();
        // Validation stricte du userId
        allow write: if isSignedIn() && (
          (request.resource != null && request.resource.data.userId == request.auth.uid) ||
          (resource != null && resource.data.userId == request.auth.uid)
        );
      }

      match /documents/{docId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn();
      }

      match /categories/{catId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn();
      }

      match /{allSubcollections=**} {
        allow read, write: if isSignedIn();
      }
    }

    // Autoriser la lecture des modules (statique)
    match /modules/{moduleId} {
      allow read: if true;
    }
  }
}
