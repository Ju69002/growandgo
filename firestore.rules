rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Gestion des profils utilisateurs
    match /users/{userId} {
      // Autoriser tout pour le prototype (Système d'ID/Password personnalisé)
      allow read, list, write: if true;
    }

    // Gestion des entreprises et de leurs sous-collections
    match /companies/{companyId} {
      allow read, write: if true;

      match /categories/{categoryId} {
        allow read, write: if true;
      }
      match /documents/{documentId} {
        allow read, write: if true;
      }
      match /events/{eventId} {
        allow read, write: if true;
      }
    }

    // Autoriser la lecture des modules pour la configuration
    match /modules/{moduleId} {
      allow read: if true;
    }

    // Sécurité pour les propriétaires de l'application
    match /applicationOwners/{ownerId} {
      allow read, write: if true;
    }
  }
}