
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isGlobalAdmin() {
      return isSignedIn() && (
        getUserData().companyId == 'admin_global' ||
        getUserData().role == 'admin'
      );
    }

    function isPatronOrFamily() {
      return isSignedIn() && (
        getUserData().role == 'patron' || 
        getUserData().role == 'family'
      );
    }

    // Gestion des profils utilisateurs
    match /users/{userId} {
      allow read: if isSignedIn(); 
      allow write: if isSignedIn() || isGlobalAdmin(); 
      
      match /received_invoices/{invoiceId} {
        allow read: if isOwner(userId) || isGlobalAdmin();
        allow write: if isSignedIn();
      }
    }

    // Gestion des entreprises et de leurs sous-collections
    match /companies/{companyId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() || isGlobalAdmin();

      match /events/{eventId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn() || isGlobalAdmin() || isPatronOrFamily();
      }

      match /documents/{docId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn() || isGlobalAdmin() || isPatronOrFamily();
      }

      match /categories/{catId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn() || isGlobalAdmin() || isPatronOrFamily();
      }

      match /{allSubcollections=**} {
        allow read, write: if isSignedIn() || isGlobalAdmin() || isPatronOrFamily();
      }
    }

    match /modules/{moduleId} {
      allow read: if true;
    }
  }
}
