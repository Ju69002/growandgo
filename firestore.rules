
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Gestion des profils utilisateurs
    match /users/{userId} {
      // Autoriser la lecture publique des IDs pour la liste sur la page login (facilite les tests du prototype)
      allow list: if true;
      // Un utilisateur peut lire et modifier son propre profil dès qu'il est connecté
      allow get, update: if isSignedIn() && request.auth.uid == userId;
      // Les super admins peuvent tout faire
      allow read, write: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
      // Autoriser la création pendant l'inscription
      allow create: if true; 
    }

    function belongsToCompany(companyId) {
      return isSignedIn() && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin');
    }

    match /companies/{companyId} {
      allow read: if isSignedIn(); // Permet de récupérer le nom de l'entreprise pour l'affichage
      allow write: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
    }

    match /companies/{companyId}/categories/{categoryId} {
      allow read: if belongsToCompany(companyId);
      allow write: if belongsToCompany(companyId) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /companies/{companyId}/documents/{documentId} {
      allow read: if belongsToCompany(companyId);
      allow write: if belongsToCompany(companyId) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /companies/{companyId}/events/{eventId} {
      allow read: if belongsToCompany(companyId);
      allow write: if belongsToCompany(companyId);
    }
  }
}
