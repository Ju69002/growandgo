rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Récupère les données de la session actuelle de l'utilisateur
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Gestion des profils utilisateurs
    match /users/{userId} {
      // Un utilisateur peut lire son propre profil. 
      // Pour le Super Admin, on utilise un get direct pour éviter la récursion infinie
      allow read: if isSignedIn() && (
        request.auth.uid == userId || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin'
      );
      // La création est autorisée pour tout le monde (inscription/session)
      allow write: if true; 
    }

    // Gestion des entreprises et de leurs sous-collections
    match /companies/{companyId} {
      
      // Vérifie l'appartenance à l'entreprise ou le rôle Super Admin
      function canAccessCompany() {
        let userData = getUserData();
        return userData.companyId == companyId || userData.role == 'super_admin';
      }

      // Vérifie si l'utilisateur est Admin de l'entreprise ou Super Admin
      function canManageCompany() {
        let userData = getUserData();
        return (userData.companyId == companyId && userData.role == 'admin') || userData.role == 'super_admin';
      }

      allow read: if isSignedIn() && canAccessCompany();
      allow write: if isSignedIn() && canManageCompany();

      match /categories/{categoryId} {
        allow read: if isSignedIn() && canAccessCompany();
        allow write: if isSignedIn() && canManageCompany();
      }
      match /documents/{documentId} {
        allow read: if isSignedIn() && canAccessCompany();
        allow write: if isSignedIn() && canAccessCompany(); // Les employés peuvent aussi uploader/modifier des docs
      }
      match /events/{eventId} {
        allow read: if isSignedIn() && canAccessCompany();
        allow write: if isSignedIn() && canAccessCompany(); // Les employés peuvent aussi gérer l'agenda
      }
    }

    // Autoriser la lecture des modules pour tous les connectés
    match /modules/{moduleId} {
      allow read: if isSignedIn();
    }

    // Sécurité pour les propriétaires de l'application (Super Admin)
    match /applicationOwners/{ownerId} {
      allow read, write: if isSignedIn() && getUserData().role == 'super_admin';
    }
  }
}